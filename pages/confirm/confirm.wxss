view{
  background-color: black;
}
.bg_wrap{
  position: relative;
  background-color: black;
}
.back_wrap{
  position: absolute;
  top:90vh;
  height: 100rpx;
  width: 100rpx;
  left: 20%;
  transform: translate(-50%,-50%);
  border-radius: 100%;
}
.forward_wrap{
  position: absolute;
  top:90vh;
  height: 100rpx;
  width: 100rpx;
  left: 80%;
  transform: translate(-50%,-50%);
  border-radius: 100%;
}
canvas{
  height: 100vh;
  width: 100vh;
}
.forward_icon{
  transform: translate(15%,15%);
  height:75rpx;
  width:75rpx;
}
.back_icon{
  transform: translate(15%,15%);
  height:75rpx;
  width:75rpx;
}