<!--pages/home/home.wxml-->
<view class="pg_home">
  <view class="home_swiper" >
    <swiper autoplay indicator-dots circular>
      <swiper-item
      wx:for="{{swiperList}}"
      wx:key="img_id">
        <block>
          <image mode="scaleToFill" style="width: 100%;height:100%" src="{{item.img_src}}"></image>
        </block>
      </swiper-item>
    </swiper>
    <navigator class="navButton" url="../../pages/test/test">
      <button type="primary" plain="true">测试</button>
    </navigator>
    <navigator class="navButton" url="../../pages/shot/shot">
      <button type="primary" plain="true">拍照</button>
    </navigator>
  </view>
</view>