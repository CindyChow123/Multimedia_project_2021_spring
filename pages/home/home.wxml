<!--pages/home/home.wxml-->
<view class="pg_home">
  <view class="home_swiper" >
    <swiper autoplay indicator-dots circular class="home_swiper">
      <swiper-item
      wx:for="{{swiperList}}"
      wx:key="img_id">
        <image mode="scaleToFill" style="width: 100%;height:100%" src="{{item.img_src}}"></image>
      </swiper-item>
    </swiper>
    <view class="navButton">
      <button bindtap='choose' class="choose_button" type="primary" plain="true">Choose a picture</button>
    </view>
  </view>
</view>