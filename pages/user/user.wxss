/* pages/user/user.wxss */
.user_info_wrap{
  height: 45vh;
  background-color: cadetblue;
  overflow: hidden;
  position: relative;
}
.user_img_wrap{
  position: relative;
}
.user_bg{
  height: 50vh;
  filter: blur(10rpx);
  width: 100%;
}
.user_info{
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 30%;
  text-align: center;
}
.user_icon{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.user_name{
  color:white
}
.user_login{
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top:40%;
  border: 1rpx solid greenyellow;
  color:greenyellow;
  font-size: 38rpx;
  padding:20rpx;
  border-radius: 10rpx;
}
.navButton{
  padding:20rpx;
}